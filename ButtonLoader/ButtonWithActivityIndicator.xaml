<?xml version="1.0" encoding="UTF-8"?>
<Grid xmlns="http://xamarin.com/schemas/2014/forms"
      xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
      x:Class="ButtonLoader.ButtonWithActivityIndicator">
        <Button x:Name="InnerButton"
            Text="Button text"
            BackgroundColor="MediumPurple"
            TextColor="White"
            BorderWidth="1"
            BorderColor="LightSkyBlue"
            HeightRequest="50"
            CornerRadius="25"
            Clicked="OnClicked"
            IsVisible="True" />
       
        <ActivityIndicator IsVisible="False" Opacity="0" x:Name="InnerActivityIndicator" IsRunning="True"  >
             <ActivityIndicator.Scale>   
                <OnPlatform x:TypeArguments="x:Double">
                    <On Platform="iOS">1</On>
                    <On Platform="Android">0.7</On>
                </OnPlatform>
            </ActivityIndicator.Scale>
        </ActivityIndicator>

</Grid>