<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:local="clr-namespace:ButtonLoader"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" x:Class="ButtonLoader.MainPage">
    <StackLayout HorizontalOptions="Center"  Padding="40, 20"  VerticalOptions="Center">
        <local:ButtonWithActivityIndicator x:Name="ButtonWithSpinner" Text="Load" Clicked="OnClicked" ActivityIndicatorColor="White" />
        <local:ButtonActivityIndicatorRight x:Name="ButtonWithSpinnerRight" Text="Load" Clicked="OnClickedRight" ActivityIndicatorColor="White" />
    </StackLayout>
</ContentPage>